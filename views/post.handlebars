<div class="card" id="post" data-postid="{{post.id}}">
  <h5 class="card-header">{{post.title}}</h5>
  <div class="card-body">
    <p class="card-title text-secondary fw-light fst-italic">Posted by {{post.user.username}} on {{format_date post.createdAt}} {{format_time post.createdAt}}</p>
    <p class="card-text">{{post.content}}</p>
  </div>
</div>
<hr>
<h5>Comments</h5>
{{#each comments as |comment|}}
{{>comment-details}}
{{/each}}
{{#if logged_in}}
<form id="comment-form">
  <div class="mb-3">
    <label for="comment" class="form-label">Leave a comment</label>
    <textarea class="form-control" id="comment" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Add a comment</button>
</form>
<script src="/js/newcomment.js"></script>
<script src="/js/deletecomment.js"></script>
{{/if}}

