<div class="card">
  <h5 class="card-header">{{post.title}}</h5>
  <div class="card-body">
    <p class="card-title">Posted by {{post.user.username}} on {{post.createdAt}}</p>
    <p class="card-text">{{post.content}}</p>
  </div>
</div>
<hr>
<h5>Comments</h5>
{{#each post.comments as |comment|}}
{{>comment-details}}
{{/each}}

    <a href="/post/{{id}}" class="btn btn-primary">Add a comment</a>