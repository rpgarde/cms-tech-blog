<h2 class = "mt-4">Login</h2>

<form class="login-form my-2">
  <div class="mb-3">
    <label for="username-login" class="form-label">Username</label>
    <input class="form-control" type="text" id="username-login" />
  </div>
  <div class="mb-3">
    <label for="password-login" class="form-label">Password</label>
    <input class="form-control" type="password" id="password-login" />
  </div>
  <button class="btn btn-primary" type="submit">Login</button>
</form>
<a href="/signup" class="href" type="button"><button class="btn btn-secondary">Signup instead</button></a>

<script src="/js/login.js"></script>